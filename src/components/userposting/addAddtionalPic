import React, { useState } from 'react';
import { useNavigate  } from "react-router-dom"
import axios from 'axios';

function AddAddtionalPic(props) {
    const navigate = useNavigate();
    const [url, setUrl] = useState([]);
  
    const handlePic = (event) => {
        setUrl(event.target.value);
    };

      const handleSubmit = async(event)=>{
          event.preventDefault();
          const newPic={ url }
             await axios.put(`http://localhost:5000/api/post/prisePic/${props._id}`, newPic)
          };  
  
      return (
          <div>
            <form onSubmit ={handleSubmit}>
                <div className= " row form-group">
                    <div className = "col">
                        <input type="url" placeholder="Add anouther pic." onChange={handlePic} />
                        <br></br>
                        <button variant="primary" type="submit">Add Pic!</button>
                        <hr></hr>    
                    </div>
                  </div>
              </form>
          </div>
      
    );
}

export default AddAddtionalPic;